{
  "name": "pub-soup",
  "version": "0.1.0",
  "description": "Convert documents to HTML",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "lint": "healthier && prettier --write --plugin-search-dir=. '**/*.{js,json,css,yml,svelte}'",
    "prepublishOnly": "npm run lint",
    "test": "c8 --all tap --no-cov tests/*.test.js && c8 report --reporter=lcov",
    "test-single": "c8 tap --no-cov",
    "snapshots": "TAP_SNAPSHOT=1 npm run test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/baldurbjarnason/pub-soup.git"
  },
  "author": "",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/baldurbjarnason/pub-soup/issues"
  },
  "homepage": "https://github.com/baldurbjarnason/pub-soup#readme",
  "dependencies": {
    "cheerio": "^1.0.0-rc.10",
    "dompurify": "^2.3.0",
    "jsdom": "^16.6.0",
    "mime": "^2.5.2",
    "nanoid": "^3.1.23",
    "p-queue": "^7.1.0",
    "postcss": "^8.3.5",
    "postcss-prefix-selector": "^1.10.0",
    "postcss-selector-parser": "^6.0.6",
    "postcss-value-parser": "^4.1.0",
    "request": "^2.88.2",
    "srcset": "^4.0.0",
    "svgo": "^2.3.1",
    "unzipper": "^0.10.11",
    "valid-data-url": "^4.0.0"
  },
  "devDependencies": {
    "c8": "^7.7.3",
    "healthier": "^4.0.0",
    "prettier": "^2.3.2",
    "tap": "^15.0.9",
    "testdouble": "^3.16.1",
    "typescript": "^4.3.5"
  }
}
